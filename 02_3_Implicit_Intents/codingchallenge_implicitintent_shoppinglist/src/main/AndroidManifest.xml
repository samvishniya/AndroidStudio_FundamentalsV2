<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.vishniya.codingchallenge_shopping_list">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.vishniya.codingchallenge_implicitintent_shoppinglist.codingchallenge_shopping_list.ShopItemsListActivity"
            android:label="Choose your item to add to your list"
            android:parentActivityName="com.example.vishniya.codingchallenge_implicitintent_shoppinglist.codingchallenge_shopping_list.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.vishniya.codingchallenge_implicitintent_shoppinglist.codingchallenge_shopping_list.MainActivity"
                />
        </activity>
        <activity android:name="com.example.vishniya.codingchallenge_implicitintent_shoppinglist.codingchallenge_shopping_list.MainActivity"
            android:launchMode="singleTop"
            >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>